{
  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": true,
    "**/*.json": {
      "when": "$(basename).sajson"
    },
    "**/*.wxml": {
      "when": "$(basename).saml"
    },
    "**/*.wxss": {
      "when": "$(basename).sacss"
    }
  },
  "vetur.validation.template": false,
  "files.associations": {
    "*.sajson": "json",
    "*.saml": "wxml",
    "*.sacss": "css",
    "*.cajson": "json",
    "*.caml": "wxml",
    "*.cacss": "css"
  }
}